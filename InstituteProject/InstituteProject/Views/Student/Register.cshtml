
@{
    ViewBag.Title = "StudentRegister";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}
<div class="container">
    <section class="main">
        <form class="form-2 widthform" method="post">
            <h1><span class="log-in">Registration Form</span></h1>
            @if (ViewBag.Error != null)
            {
                if (ViewBag.Error.Trim().Length > 0)
                {
                    <span style="color:red">@ViewBag.Error</span>
                }
            }
            <p class="float">
                <label for="login"><i class="icon-user"></i>Username</label>
                <input type="text" name="Username" id="Username" placeholder="Username">
            </p>
            <p class="float">
                <label for="login"><i class="icon-user"></i>Email</label>
                <input type="text" name="Email" id="Email" placeholder="Username">
            </p>

            <p class="float">
                <label for="login"><i class="icon-user"></i>Password</label>
                <input type="text" name="Password" id="Password" placeholder="Username">
            </p>

            <p class="float">
                <label for="login"><i class="icon-user"></i>Full Name</label>
                <input type="text" name="FullName" id="FullName" placeholder="Full Name">
            </p>

            <p class="float">
                <label for="login"><i class="icon-user"></i>College Name</label>
                <input type="text" name="CollegeName" id="CollegeName" placeholder="College Name">
            </p>

            <p class="float">
                <label for="login"><i class="icon-user"></i>Contact Number</label>
                <input type="text" name="ContactNo" id="ContactNo" placeholder="Contact Number">
            </p>

            <p class="float">
                <label for="login"><i class="icon-user"></i>Permanent Contact</label>
                <input type="text" name="PerContactNo" id="PerContactNo" placeholder="Permanent Contact">
            </p>

            <p class="float">
                <label for="login"><i class="icon-user"></i>Address</label>
                <input type="text" name="Address" id="Address" placeholder="Adderess">
            </p>

            <p class="float">
                <label for="login"><i class="icon-user"></i>Date of Birth</label>
                <input type="text" name="DateOfBirth" id="DateOfBirth" placeholder="Date of Birth">
            </p>

            <p class="clearfix center">
                <input type="submit" name="submit" value="Register">
            </p>
        </form>
    </section>
</div>
